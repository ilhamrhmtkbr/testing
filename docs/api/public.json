    "/student/certificate/verify": {
      "get": {
        "summary": "Get | Student Certificate Verify",
        "description": "Digunakan untuk verifikasi sertifikat yang didapatkan oleh student",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "Id Sertifikat",
            "required": true,
            "schema": {
              "type": "string",
              "example": "7669491f-d926-4621-b2a4-f5dec8a01502"
            }
          },
          {
            "$ref": "#/components/parameters/AcceptLanguage"
          }
        ],
        "responses": {
          "200": {
            "description": "successful",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
