  "servers": [
    {
      "description": "RESTful API Server",
      "url": "{environment}",
      "variables": {
        "environment": {
          "description": "Server Environtment",
          "default": "auth-api",
          "enum": [
            "https://unique-id.ngrok-free.app/public-api/v1",
            "http://localhost:8000/public-api/v1",
            "http://public-api.course.iamra.site",
            "https://public-api.course.iamra.site"
          ]
        }
      }
    }
  ],
  "components": {
    "parameters": {
      "AcceptLanguage": {
        "name": "Accept-Language",
        "in": "header",
        "description": "Bahasa Yang di Gunakan",
        "required": true,
        "schema": {
          "type": "string",
          "example": "id"
        }
      }
    }
  },
  "paths": {
