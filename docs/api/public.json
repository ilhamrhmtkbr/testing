    "/course": {
      "get": {
        "summary": "Get | Get detail course",
        "description": "Endpoint ini digunakan untuk mengambil data detail kursus yang dipilih",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "ID dari course",
            "required": true,
            "schema": {
              "type": "string",
              "example": "abc123"
            }
          },
          {
            "$ref": "#/components/parameters/AcceptLanguage"
          }
        ],
        "responses": {
          "200": {
            "description": "successful",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
                  "message": "Get data successfully",
                  "data": {
                    "course": {
                      "id": "9cb92dfe-f001-4a31-9f1d-d989cef38515",
