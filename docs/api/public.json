        "summary": "Get | Get detail section from course",
        "description": "Menampilkan materi dari kursus yang dipilih",
        "parameters": [
          {
            "name": "id",
            "in": "query",
            "description": "ID dari course",
            "required": true,
            "schema": {
              "type": "string",
              "example": "abc123"
            }
          },
          {
            "$ref": "#/components/parameters/AcceptLanguage"
          }
        ],
        "responses": {
          "200": {
            "description": "successful",
            "content": {
              "application/json": {
                "example": {
                  "success": true,
